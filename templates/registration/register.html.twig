{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}
	<h1 class="my-5 text-center">Register</h1>
	<div class="container">
		<div class="row">
			<div class="col-md-3">&nbsp;</div>
			<div class="col-md-6">
				<div class="bg-light py-3 px-3 border border-2">
					{{ form_start(registrationForm) }}
					{{ form_row(registrationForm.first_name) }}
					{{ form_row(registrationForm.last_name) }}
					{{ form_row(registrationForm.email) }}
					{{ form_row(registrationForm.password) }}
					{{ form_row(registrationForm.confirm_password) }}
					{{ form_row(registrationForm.billing_address) }}
					{{ form_row(registrationForm.city) }}
					{{ form_row(registrationForm.postal_code) }}
					{{ form_row(registrationForm.phone_number) }}
					{{ form_row(registrationForm.picture) }}
					{{ form_row(registrationForm.agreeTerms) }}
					<br>
					<button type="submit" class="btn btn-success">Register</button>
					{{ form_end(registrationForm) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
