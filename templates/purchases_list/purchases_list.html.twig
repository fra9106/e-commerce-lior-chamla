{% extends "base.html.twig" %}

{% block title %}
	Mes commandes
{% endblock %}

{% block body %}<br><br>
	<h1 class="my-3">Mes commandes :
	</h1>
	{% if purchases | length > 0 %}
		<table class="table">
			<thead>
				<tr>
					<th>NumÃ©ro</th>
					<th>Adresse</th>
					<th>Date de commande</th>
					<th>Produits</th>
					<th>Total</th>
				</tr>
			</thead>
			<tbody>
				{% for purchase in purchases %}
					<tr>
						<td>{{ purchase.id }}</td>
						<td>{{ purchase.address }}<br>{{purchase.postalCode}},
							{{purchase.city}}</td>
						<td>{{ purchase.purchaseAt | date('d/m/Y H:i') }}</td>
						<td>
							<ul>
								{% for item in purchase.purchaseItems %}
									<li>{{item.quantity}}x
										{{ item.productName }}
										{{ item.total|amount }}</li>
								{% endfor %}
							</ul>
						</td>
						<td>{{ purchase.total|amount }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% else %}
		<div class="alert alert-info mt-3">
			<h5>Vous n'avez pas encore fait de commande ðŸ˜¥ !</h5>
		</div>
	{% endif %}
{% endblock %}
