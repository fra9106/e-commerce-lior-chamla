{% extends 'base.html.twig' %}

{% block title %}Profil de
	{{ user.fullName}}
{% endblock %}

{% block body %}


	<div class="container ">
		<h1 class="text-center my-5">Hello
			{{ user.fullName}}
		</h1>
		<div class="row align-items-center justify-content-center mb-5">
			<div class="justify-content-center text-center">
				{% if user.picture %}
					<img class="avatar mb-3 mr-3" src="{{ asset('assets/avatars/img_profile/' ~ user.picture) }}" alt="avatar de {{ user.fullName }}" height="100" width="100">
				{% else %}
					<img class="avatar mb-3 mr-3" src="{{ asset('assets/avatars/default.jpg') }}" alt="avatar de {{ user.fullName }}" height="100" width="100">
				{% endif %}
				<br>
				<span class="badge bg-primary text-white mb-3">{{user.purchases | length}}
					commandes</span>
			</div>
			<div class="card card-profile my-5">
				<div class="card-header text-center">
					{{ user.fullName}}
				</div>
				<ul class="list-group list-group-flush">
					<li class="list-group-item">Nom :
						{{ user.firstName}}</li>
					<li class="list-group-item">Pr√©nom :
						{{ user.lastName}}</li>
					<li class="list-group-item">Mail :
						{{ user.email}}</li>
					<li class="list-group-item">Adresse :
						{{ user.billingAddress}}</li>
					<li class="list-group-item">Ville :
						{{ user.city}}</li>
					<li class="list-group-item">Code postal :
						{{ user.postalCode}}</li>
					<li class="list-group-item">Telephone :
						{{ user.phoneNumber}}</li>
				</ul>
			</div>
			<div class="col text-center">
				<a href="#" class="btn btn-success btn-lg mb-2">
					<i class="fas fa-edit"></i>
					Modifier mon profil
				</a>
				<a href="#" class="btn btn-success btn-lg mb-2">
					<i class="fas fa-key"></i>
					Modifier mon mot de passe
				</a>
			</div>
		</div>
	</div>
{% endblock %}
