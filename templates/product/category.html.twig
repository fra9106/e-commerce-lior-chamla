{% extends 'base.html.twig' %}

{% block title %}
	Categorie :
	{{ category.name}}
{% endblock %}

{% block body %}
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a href="{{ path('app_homepage') }}">Accueil</a>
		</li>
		<li class="breadcrumb-item active">{{ category.name }}</li>
	</ol>
	<h1>Catégorie :
		{{category.name }}</h1>

	<div class="row">
		{% for product in category.products %}
			<div class="col-3">
				<div class="card">
					<img src="{{ product.mainPicture }}" class="img-fluid" alt="image produit">
					<div class="card-body">
						<h4 class="card-title">{{ product.name }}
							({{ product.price / 100 }}
							&euro;)</h4>
						<p class="card-text">{{ product.shortDescription }}</p>
						<a href="{{ path('show_product', { 'category_slug' : product.category.slug, 'slug': product.slug}) }}" class="btn btn-primary btn-sm">Détail</a>
						<a href="#" class="btn btn-success btn-sm">Ajouter</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
