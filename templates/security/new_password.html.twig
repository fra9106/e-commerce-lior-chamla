{% extends "base.html.twig" %}

{% block title %}Modification password de {{ app.user.firstName }}
{% endblock %}

{% block body %}

	<div classe="container">
		<div class="row">
			<div class="col-md-3">&nbsp;</div>
			<div class="col-md-6">
				<div class="bg-light py-3 px-3 border border-2">
					<h1>Modif du pass de {{ app.user.firstName }}
					</h1>

					{{ form_start(form) }}

					{{ form_widget(form) }}

